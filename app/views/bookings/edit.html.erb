<div class="container">
  <h1 class="text-center mt-4">Edit your booking</h1>
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-4">
     <%= simple_form_for(@booking) do |f| %>
        <%= f.input :name %>
        <%= f.input :rooms %>
        <%= f.input :price %>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
      <%= link_to "Cancel", booking_path(@booking), class: "btn btn-danger my-2" %>
    </div>
  </div>
</div>

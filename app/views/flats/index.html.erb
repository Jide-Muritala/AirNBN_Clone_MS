<%# title %>
<div class="row">
  <%# distribution col-12 %>
  <div class="title">
    <h1>Pages#home</h1>
  </div>
</div>
<%# creating main container %>
<div class="container-fluid d-flex">
  <%# dividing in rows %>
  <div class="row align-self-center">
    <% @flats.each do |flat| %>
      <%# dist md-4 %>
      <div class="col sm">
        <div class="w-100">
          <%# creating flat-card %>
          <div class="flat-card">
            <%# creating image, for future cloudinary updating %>
            <div class="flat-card-image">
              <%= cl_image_tag flat.photo.key, height:180, crop: :fill if flat.photo.attached? %>
            </div>
            <%# creating card-content like previous examples %>
            <div class="flat-card-content">
              <%# card-title only name, discuss to stablish an address %>
              <div class="flat-card-title">
                <h4><%= flat.name %></h4>
              </div>
              <%# distribution flex %>
              <div class="d-flex">
                <%# distribution of room guests and price %>
                <div class="flex align-items-center">
                  <i class="fa-solid fa-bed"></i>
                  <span><%= flat.rooms %></span>
                </div>
                <div class="flex align-items-center ms-3">
                  <i class="fa-solid fa-euro-sign"></i>
                  <span><%= flat.price %></span>
                </div>
                <div class="flex align-items-center ms-5">
                  <%= link_to "View this flat", flat_path(flat), class: "btn btn-success w-100" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%# !! Dealing with mapbox %>
  <div data-controller="map" data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>" data-map-markers-value="<%= @markers.to_json %>" id='map' style='width: 100%; max-height: 100%; margin-left: 20'></div>
</div>

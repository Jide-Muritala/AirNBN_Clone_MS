<div class="container">
  <h1>Home page with search bar</h1>
  <%= form_with url: flats_path, method: :get, class: "d-flex" do %>
    <%= text_field_tag :query,params[:query], class: "form-control", placeholder: "Find a flat" %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
  <%= link_to "View All", flats_path, class: "btn btn-success m-4"  %>
</div>
